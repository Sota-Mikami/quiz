<div class="modal-header">
	<h3>クイズを出題する</h3>
</div>
<div class="modal-body">

    <!-- Quiz Form -->
    <form class="form">
        <div class="form-group">
            <input type="text" class="form-control" ng-model="quiz.question" placeholder="質問"/>
        </div>
        <div class="form-group" ng-repeat="option in quiz.optionList" style="position:relative;">
            <input type="text" class="form-control" ng-model="option.option" placeholder="選択肢" style="width: 95%;"/>
            <button type="button" class="close" tabindex="-1" style="position:absolute; top:7px; right:0;" ng-click="removeOption(option.$$hashKey)"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="form-group" style="text-align:right;">
            <button type="submit" class="btn btn-default btn-sm" ng-click="addOption()"><span class="glyphicon glyphicon-plus"></span>&nbsp;選択肢を追加</button>
        </div>
    </form><!-- Quiz Form -->

	<!-- Alert -->
	<div class="alert alert-danger" ng-show="alertList.length > 0">
		<ul>
			<li ng-repeat="alert in alertList">{{alert}}</li>
		</ul>
	</div><!-- Alert -->
	
</div>
<div class="modal-footer">
	<button class="btn btn-default" ng-click="$dismiss()">キャンセル</button>
	<button class="btn btn-primary" ng-click="publishQuiz(quiz)"><span class="glyphicon glyphicon-cloud-upload"></span>&nbsp;出題</button>
</div>
